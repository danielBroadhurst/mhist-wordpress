				<div class="cell large-4">{{ footer_widget_2 }}</div>
				<div class="cell large-4">{{ footer_widget_3 }}
					<div class="footer-widget">
						<h2>Social Media Links</h2>
						<div class="alignleft">
							<a href="https://www.facebook.com/mhist.bolton/"><img
									src="{{site.url}}/wp-content/uploads/2019/06/iconfinder_Facebook_4550856.png"
									alt="MhIST Facebook" title="MhIST Facebook"></a>
