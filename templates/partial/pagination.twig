{% if posts.pagination.pages is not empty %}
<nav class="pagination-block">
    <ul class="pagination">
        {% if pagination.pages|first and pagination.pages|first.current != true %}
        <li class="first btn">
            <a href="{{ pagination.pages|first.link }}" class="button hollow">First</a>
        </li>
        {% else %}
        <li class="first btn disabled">
            <button disabled class="button hollow">First</button>
        </li>
        {% endif %}

        {% if pagination.prev %}
        <li class="prev btn">
            <a href="{{ pagination.prev.link }}" class="button hollow">Previous</a>
        </li>
        {% else %}
        <li class="prev btn disabled">
            <button disabled class="button hollow">Previous</button>
        </li>
        {% endif %}

        {% for page in pagination.pages %}
        {% if page.link %}
        <li>
            <a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
        </li>
        {% else %}
        <li class="current">
            <span class="{{ page.class }}">{{ page.title }}</span>
        </li>
        {% endif %}
        {% endfor %}

        {% if pagination.next %}
        <li class="next btn">
            <a href="{{ pagination.next.link }}" class="button hollow">
                Next
            </a>
        </li>
        {% else %}
        <li class="next btn disabled">
            <button disabled class="button hollow">
                Next
            </button>
        </li>
        {% endif %}
        {% if pagination.pages|last and pagination.pages|last.current != true %}
        <li class="last btn">
            <a href="{{ pagination.pages|last.link }}" class="button hollow">Last</a>
        </li>
        {% else %}
        <li class="last btn disabled">
            <button disabled class="button hollow">Last</button>
        </li>
        {% endif %}
    </ul>
</nav>
{% endif %}