{% extends "base.twig" %}

{% block content %}
<article class="post-type-{{ post.post_type }} article-content" id="post-{{ post.ID }}">

    <div class="grid-container">
        <section class="article-body">
            <div class="grid-x grid-margin-x">
                <div class="cell large-8">
                    <img src="{{ post.thumbnail.src }}" alt="Image">
                    <div class="article-body">
                        <h1>{{post.title}}</h1>
                        {{post.content}}
                    </div>
                </div>
                <div class="cell large-3 large-offset-1">
                    {{ page_right_small }}
                    {{ page_right }}
                </div>
            </div>
        </section>
    </div>

    <div class="grid-container">
        <h2>Other Supporters we work with.</h2>
        <div class="grid-x grid-margin-x">
            {% for post in supporters %}
            <div class="cell large-3">
                <img src="{{ post.thumbnail.src }}" alt="Image">
                <a href="{{post.url}}">{{post.title}}</a>
                <p>{{ post.preview.read_more(FALSE) }}</p>
            </div>
            {% endfor %}
        </div>
    </div>

</article>
{% endblock %}