{% extends "base.twig" %}

{% block content %}
<div class="content-wrapper" id="main-content">
	<article class="post-type-{{post.post_type}} article-content" id="post-{{post.ID}}">

		<div class="grid-container-full header-section">
			<div class="header-image overlay">
				<img src="{{ post.thumbnail.src|resize(1400, 600) }}" alt="{{ post.title }}">
			</div>
			<div class="grid-container">
				<div class="grid-x grid-margin-x header-vertical">
					<div class="cell large-7 header-text dark-blue">
						<h1>{{post.title}} | Mental Health Independent Support Team</h1>
						{{post.content}}
					</div>

				</div>
			</div>
		</div>

		<div class="grid-container-full">
			<div class="cell cta yellow">
				<div class="grid-container">
					<div class="grid-x grid-margin-x">
						<div class="cell medium-5 left">
							<h3>Support from people who have similar experiences.</h3>
							<p>Our self help groups are very active and they provide for the needs of different
								groups of people such as bipolar, self harm, OCD and depression.</p>
						</div>
						<div class="cell medium-5 medium-offset-2 flex-right-space">
							<h3>Donatations &amp; Fundraising</h3>
							<p>Can you help us raise funds to help people.</p>
							<a href="#" class="button hollow slide-right">Donations</a>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="grid-container">
			<h2>Self Help Support Groups</h2>
			<p>Our support groups can provide you with all the tools you need to get the help you need, find out
				more
				about our groups below.</p>
			<div class="grid-x grid-margin-x">
				{% for post in support_groups|slice(0,3) %}
				<div class="cell large-4">
					<div class="support-group card {{ cycle(['even', 'odd'], loop.index0) }}" id="{{post.slug}}">
						<div class="card-divider">
							<a href="{{ post.link }}">
								<h3>{{post.title}}</h3>
							</a>
						</div>
						<div class="card-section">
							<a href="{{ post.link }}"><img src="{{ post.thumbnail.src|resize(1200, 800) }}"
									alt="{{ post.title }}"></a>
							<p>{{ post.preview.read_more(FALSE) }}</p>
						</div>
					</div>
				</div>
				{% endfor %}
				<div class="cell flex-center">
					<p class="other-groups-title"><strong>Our Other Groups</strong></p>
					<ul class="other-groups">
						{% for post in support_groups_all %}
						<li><a href="{{ post.link }}">
								{{post.title}}
							</a>
						</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>

		<div class="grid-container-full">
			<div class="cell cta dark-blue">
				<div class="grid-container">
					<div class="cell large-5 left">
						<h3>Get involved with MhIST</h3>
						<p>Volunteer with MhIST and help others.</p>
						<a href="#" class="button hollow">Volunteer</a>
					</div>
				</div>
			</div>
		</div>

		<section class="grid-container">
			<div class="grid-x grid-margin-x">
				<div class="cell large-3">
					<h2>Your Letters</h2>
					{% for post in your_stories|slice(0,1) %}
					<div class="your-stories" id="{{post.slug}}">
						<div>
							<a href="{{ post.link }}">
								<h3>{{post.title}}</h3>
							</a>
							<img src="{{ post.thumbnail.src|resize(1200, 800) }}" alt="{{ post.title }}">
							<p>{{ post.preview.read_more('Continue reading this letter...') }}</p>
						</div>
					</div>
					{% endfor %}
				</div>
				<div class="cell large-8 large-offset-1">
					<h2>Latest News</h2>
					{% for post in news_stories|slice(0,3) %}
					<div class="cell large-8 news-stories blog-roll" id="{{post.slug}}">
						<div>
							<a href="{{ post.link }}">
								<h3>{{post.title}}</h3>
							</a>
							<p>{{ post.preview.read_more('Continue reading this blog post...') }}</p>
						</div>
					</div>
					{% endfor %}
				</div>
			</div>
		</section>

		<div class="grid-container-full">
			<div class="cell cta yellow">
				<div class="grid-container">
					<div class="grid-x grid-margin-x flex-center-vertical spaced">
						<div class="cell">
							<h3>Our Sponsors</h3>
						</div>
						{% for post in supporters|slice(0,4) %}
						<div class="cell large-2">
							<a href="{{ post.link }}"><img src="{{ post.thumbnail.src }}" alt="{{ post.title }}"></a>
						</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>

		<div class="grid-container">
			<h2>What people are saying about MhIST</h2>
			<div class="grid-x grid-margin-x">
				{% for post in testimonials|slice(0,5) %}

				<div class="cell large-4">
					<div class="testimonials card" id="{{post.slug}}">
						<div class="card-divider">
							<h3>{{post.title}}</h3>
						</div>
						<div class="card-section">
							<img src="{{ post.thumbnail.src|resize(600, 400) }}" alt="{{ post.title }}">
							<p>{{ post.preview.read_more(FALSE) }}</p>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
		</div>

		<div class="grid-container-full">
			<div class="cell cta dark-blue">
				<div class="grid-container">
					<div class="large-4">
						<h3>Survey Monkey</h3>
						<p>Can you spare a moment to do our latest survey.</p>
					</div>
					<div class="large-8">
						<a href="#" class="button hollow">Survey Monkey</a>
					</div>
				</div>
			</div>
		</div>

		<div class="grid-container">
			<div class="grid-x grid-margin-x">
				<div class="cell large-8">
					<h2>Frequenty Asked Questions</h2>
					<ul class="accordion" data-accordion data-multi-expand="true" data-allow-all-closed="true">
						{% for post in faq|slice(0,3) %}
						<li class="accordion-item" data-accordion-item>
							<a href="#" class="accordion-title">{{post.title}}</a>
							<div class="accordion-content" data-tab-content>
								{{ post.content }}
							</div>
						</li>
						{% endfor %}
					</ul>
				</div>
				<div class="cell large-3 large-offset-1">
					<h2>Looking for help?</h2>
					<img src="/wp-content/uploads/2019/06/600x400-1200x800-c-default.jpg"
						alt="Image">
				</div>
			</div>
		</div>

	</article>
</div><!-- /content-wrapper -->
{% endblock %}